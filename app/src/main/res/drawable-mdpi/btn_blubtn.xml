<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 평상시 -->
    <item android:state_focused="false"
        android:state_pressed="false">
        <shape>
            <corners
                android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="#3497da" />
            <gradient
                android:angle="90"
                android:centerColor="#3497da"
                android:startColor="#3497da"
                android:endColor="#ceebff"
                android:type="linear" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

    <!-- 클릭했을 때 -->
    <item android:state_focused="false"
        android:state_pressed="true">
        <shape>
            <solid android:color="#248ed6" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>